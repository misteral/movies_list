<p id="notice"><%= notice %></p>

<h1>Gentres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gentres.each do |gentre| %>
      <tr>
        <td><%= gentre.name %></td>
        <td><%= link_to 'Show', admin_gentre_path(gentre.id) %></td>
        <td><%= link_to 'Edit', edit_admin_gentre_path(gentre) %></td>
        <td><%= link_to 'Destroy', admin_gentre_path(gentre.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

