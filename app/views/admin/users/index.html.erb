<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table border="1">
  <col width="150">
  <thead>
    <tr>
      <th>Username</th>
      <th>Movies</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <% if user.movies.present? %>
        <td><%= link_to 'movies', admin_user_movies_path(user) %></td>
        <% else %>
        <td>none </td>
        <% end %>
        <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
